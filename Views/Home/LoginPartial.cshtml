 @model LoginUser
 <div class="box2">
        <h1>Login</h1>
        <form asp-action="login" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="LoginEmail"></span>
                <label asp-for="LoginEmail"></label>
                <input asp-for="LoginEmail" class="form-control">
            </div>    
            <div class="form-group">
                <span asp-validation-for="LoginPassword"></span>
                <label asp-for="LoginPassword"></label>
                <input type="password" asp-for="LoginPassword" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
    </div>